<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.student_management.demo.mapper.mysql.volunteer.VolunteerMapper">
    <!--  更新当前学生打分  -->
    <insert id="updateByStuNum" parameterType="com.student_management.demo.mapper.dataobject.volunteer.VolunteerDO">
        UPDATE volunteer
        SET score = #{score}
        WHERE stuNum = #{stuNum}
    </insert>

    <!--  查询当前学生学号、姓名、志愿服务时长  -->
    <select id="getInfoByStuNum" parameterType="java.lang.String" resultType="com.student_management.demo.controller.volunteer.vo.VolunteerRespVO">
        SELECT stuNum, stuName, time
        FROM volunteer
        WHERE stuNum = #{stuNum}
    </select>

    <!--  根据学号查询当前学生志愿服务时长打分  -->
    <select id="getVolScoreByStuNum" parameterType="java.lang.String" resultType="java.lang.Integer">
        SELECT vol
        FROM summary
        WHERE stuNum = #{stuNum}
    </select>
</mapper>